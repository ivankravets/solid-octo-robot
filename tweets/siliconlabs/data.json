[{"tweetId": "1253670063451844609", "tweetUrl": "https://twitter.com/siliconlabs/status/1253670063451844609", "author": "Silicon Labs", "time": 1587733209, "timeFormatted": "Apr 24", "text": "All around the world restaurants are struggling because of COVID-19. We must continue to support local businesses who are safely offering take-out. Our employees received an extra $15 to order a meal and are sharing their love using <a class=\"twitter-hashtag pretty-link js-nav\" data-query-source=\"hashtag_click\" dir=\"ltr\" href=\"https://twitter.com/hashtag/ieatlocal?src=hash\"><s>#</s><b>ieatlocal</b></a>. Join us! <a class=\"twitter-timeline-link\" data-expanded-url=\"https://bit.ly/2S1845h\" dir=\"ltr\" href=\"https://t.co/WlJSJaj0lX\" rel=\"nofollow noopener\" target=\"_blank\" title=\"https://bit.ly/2S1845h\"><span class=\"tco-ellipsis\"></span><span class=\"js-display-url\">bit.ly/2S1845h</span><span class=\"tco-ellipsis\"></span></a>", "entries": {"urls": ["https://bit.ly/2S1845h"], "photos": ["https://news.platformio.org/tweets/siliconlabs/EWXuRywWsAYoLHJ.jpg"]}, "isPinned": true}, {"tweetId": "1260165420113432577", "tweetUrl": "https://twitter.com/siliconlabs/status/1260165420113432577", "author": "Silicon Labs", "time": 1589281823, "timeFormatted": "2h", "text": "<h2 class=\"TwitterCard-title js-cardClick tcu-textEllipse--multiline\" dir=\"ltr\">Future-proofing EV battery management systems</h2>\n<p class=\"tcu-resetMargin u-block TwitterCardsGrid-col--spacerTop tcu-textEllipse--multiline\" dir=\"ltr\">Despite the current boom in electric vehicle (EV) and plug-in hybrid electric vehicle (HEV) production, actual interest among consumers may be in danger of lagging behind. Rudye McGlothlin, Marketing...</p>", "entries": {"urls": ["https://t.co/0Poa2Xy0fo"], "photos": ["https://news.platformio.org/tweets/siliconlabs/SnyUPS8i.jpg"]}, "isPinned": false}, {"tweetId": "1260050576613703681", "tweetUrl": "https://twitter.com/siliconlabs/status/1260050576613703681", "author